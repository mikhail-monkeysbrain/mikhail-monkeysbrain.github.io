@import '../core/variables.styl';
@import '../core/mixins.styl';

.sr
  sr()

.container
  position relative
  container()

.btn
  display flex
  justify-content center
  align-items center
  opacity 0.8
  color #5d4301
  font-size 1.8rem
  font-weight 700
  letter-spacing 0.36px
  width 276px
  height 69px
  margin 39px auto
  cursor pointer
  &--yellow
    box-shadow inset 0 0 10px rgba(255, 248, 209, 0.3)
    border-radius 34px
    background-color #202020
    background-image linear-gradient(68deg, #ffea00 0%, #ffc500 100%)
    // TODO fix box shadow
    // box-shadow: 0 10px 0 10px #000
  &--green
    box-shadow inset 0 0 10px rgba(255, 248, 209, 0.3)
    border-radius 34px
    background-color #202020
    background-image linear-gradient(68deg, #a2cb03 0%, #009127 100%)
    color #ffffff

  &--best
    color #ffffff
    font-size 1rem
    font-weight 700
    line-height 2.2rem
    text-transform uppercase
    letter-spacing 1px
    width 113px
    height 28px
    box-shadow inset 0 0 10px rgba(255, 248, 209, 0.3)
    border-radius 14px
    background-image linear-gradient(68deg, #a2cb03 0%, #009127 100%)
    display flex
    justify-content center
    align-items center
    position absolute
    right 12px
    top 12px

.tac
  text-align center

.button__row
  display flex
  .btn
    margin 39px 35px 39px 0

.accordeon
  max-width 860px
  transform-origin: center center
  transform: scaleX(0)
  opacity 0
  transition: 1.5s 1.5s ease all
  .animated &
    transform: scale(1)
    opacity 1
  +media(1440px)
    max-width 650px
  +media(1200px)
    max-width 100%
    width calc(100% - 80px)
    margin 0 auto
  .ac
    &:nth-last-child(1)
      .ac_head
        &::after
          display none !important
  .ac_head
    color #424242
    font-family $hReg
    font-size 1.8rem
    font-weight 400
    padding 30px 0
    position relative
    cursor pointer
    &::after
      content: ''
      width 280px
      height 1px
      background #000
      display block
      position absolute
      left 0
      bottom 0
    &__dot
      width 39px
      height 36px
      background url(../img/icons/faq_circle.png) center no-repeat
      background-size cover
      position absolute
      right 10px
      top 25px
      transition: $middle
      span
        transition: $middle
        position absolute
        left 0
        margin 3px 14px
        +media(1440px)
          margin 7px 15px
      .min
        opacity 0.5
      .plus
        opacity 1
      &.expand
        transform: rotate(-180deg)
        .min
          opacity 1
        .plus
          opacity 0
  p
    color #8c855b
    font-family $mainFont
    font-size 1.4rem
    font-weight 400
    line-height 2.4rem
.answer
  display none