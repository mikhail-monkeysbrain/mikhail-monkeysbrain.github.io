@import '../core/variables.styl';
@import '../core/mixins.styl';

.sr
  sr()

.container
  position relative
  container()

.btn
  display flex
  justify-content center
  align-items center
  opacity 0.8
  color #5d4301
  font-family $hLight
  width 29.5rem
  height 6.9rem
  margin 3.9rem auto
  cursor pointer
  transition: $middle
  padding-left 5px
  padding-right 5px
  letter-spacing: -0.5px
  +media(768px)
    width 35rem
  &:hover
    opacity 1
  &--yellow
    box-shadow inset 0 0 1rem rgba(255, 248, 209, 0.3)
    border-radius 3.4rem
    background-color #202020
    background-image linear-gradient(68deg, #ffea00 0%, #ffc500 100%)
    box-shadow: 0 0 0 0 black
    transition: $middle
    &:hover
      box-shadow: 0 0 30px -5px #ffca00
  &--green
    box-shadow inset 0 0 1rem rgba(255, 248, 209, 0.3)
    border-radius 3.4rem
    background-color #202020
    background-image linear-gradient(68deg, #a2cb03 0%, #009127 100%)
    color #ffffff
    box-shadow: 0 0 0 0 black
    transition: $middle
    &:hover
      box-shadow: 0 0 30px -5px #0d9624

  &--transparent
    border-radius 3.4rem
    color #202020
    border: 4px solid rgba(255, 219, 0, 0.5)
    box-shadow: inset 0 0 0 0px rgba(255, 219, 0, 0.5)
    transition: $middle
    color #5d4301
    &:hover
      box-shadow: inset 0 0 30px -5px rgba(255, 219, 0, 0.5)

  &--best
    color #ffffff
    font-size 1rem
    font-weight 700
    line-height 2.2rem
    text-transform uppercase
    letter-spacing 1px
    width 11.33rem
    height 2.8rem
    box-shadow inset 0 0 1rem rgba(255, 248, 209, 0.3)
    border-radius 1.4rem
    background-image linear-gradient(68deg, #a2cb03 0%, #009127 100%)
    display flex
    justify-content center
    align-items center
    position absolute
    right 1.2rem
    top 1.2rem

.tac
  text-align center

.button__row
  display flex
  .btn
    margin 39px 35px 39px 0

.accordeon
  max-width 860px
  transform-origin: center center
  transform: scaleX(0)
  opacity 0
  transition: 1.5s 1.5s ease all
  .animated &
    transform: scale(1)
    opacity 1
  +media(1440px)
    max-width 650px
  +media(1200px)
    max-width 100%
    width calc(100% - 80px)
    margin 0 auto
  +media(768px)
    width calc(100% - 20px)
  .ac
    &:nth-last-child(1)
      .ac_head
        &::after
          display none !important
  .ac_head
    color #424242
    font-family $hReg
    font-size 1.8rem
    font-weight 400
    padding 30px 0
    position relative
    cursor pointer
    +media(1440px)
      font-size: 2.4rem
      padding-right 5rem
    +media(768px)
      padding-right 50px
    &::after
      content: ''
      width 280px
      height 1px
      background #000
      display block
      position absolute
      left 0
      bottom 0
    &__dot
      width 39px
      height 36px
      background url(../img/icons/faq_circle.png) center no-repeat
      background-size cover
      position absolute
      right 10px
      top 25px
      transition: $middle
      &.expand
        filter: hue-rotate(115deg)
      span
        transition: $middle
        position absolute
        left 0
        margin 3px 14px
        // +media(1440px)
        //   margin 7px 15px
      .min
        opacity 0.5
      .plus
        opacity 1
      &.expand
        transform: rotate(-180deg)
        .min
          opacity 1
        .plus
          opacity 0
  p
    color #8c855b
    font-family $mainFont
    font-size 1.4rem
    font-weight 400
    line-height 2.4rem
    +media(1440px)
      font-size: 2rem
.answer
  display none

.text--white
  color #ffffff !important