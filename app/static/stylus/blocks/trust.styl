.trust
  position relative
  h2
    color #26272d
    font-family $hLight
    font-size 4rem
    font-weight 300
    line-height 5.3rem
    letter-spacing 1.6px
    text-align center
    margin-top 200px

  &-left,
  &-right
    position absolute
    width 320px
    height 212px
    background url(../img/content/cargo-y.png) center no-repeat
    background-size cover
    z-index 0
  &-left
    bottom 50px
    left 0
    transform: scale(.75)
  &-right
    top 200px
    right -100px
  &-left-2
      top 240px
      left -120px
      transform: scale(.5) rotate(65deg)
  &-right-2
      top 720px
      right -120px
      transform: scale(.5) rotate(65deg)

  &__container
    width 1250px
    margin 0 auto
    display flex
    flex-wrap: wrap
    justify-content space-between
    +media(1440px)
      width 1050px
    +media(1200px)
      width calc(100% - 40px)
      justify-content space-around

  &__item
    display flex
    flex-direction: column
    justify-content flex-start
    align-items center
    max-width 280px
    width 25%
    +media(1200px)
      width 33%
      max-width 33%
    .animated &
      opacity 1 !important
      transform: translate(0) !important
    img
      filter: grayscale(1)
    &:hover
      img
        filter: grayscale(0)
  .t--1
    transition: .5s 1s ease-in-out all
    opacity 0
    transform: translateX(-300%)
    .trust__pic
      transform: rotate(20deg)
      img
        transform: rotate(-20deg)
    &:hover
      .trust__pic
        transform: rotate(-20deg)
        img
          transform: rotate(20deg)
  .t--2
    transition: .5s 1.25s ease-in-out all
    opacity 0
    transform: translateX(-300%)
    .trust__pic
      transform: rotate(40deg)
      img
        transform: rotate(-40deg)
    &:hover
      .trust__pic
        transform: rotate(-40deg)
        img
          transform: rotate(40deg)
  .t--3
    transition: .5s 1.5s ease-in-out all
    opacity 0
    transform: translateX(-300%)
    .trust__pic
      transform: rotate(60deg)
      img
        transform: rotate(-60deg)
    &:hover
      .trust__pic
        transform: rotate(-60deg)
        img
          transform: rotate(60deg)
  .t--4
    transition: .5s 1.75s ease-in-out all
    opacity 0
    transform: translateX(-300%)
    .trust__pic
      transform: rotate(80deg)
      img
        transform: rotate(-80deg)
    &:hover
      .trust__pic
        transform: rotate(-20deg)
        img
          transform: rotate(20deg)
  .t--5
    transition: .5s 1s ease-in-out all
    opacity 0
    transform: translateX(300%)
    .trust__pic
      transform: rotate(-20deg)
      img
        transform: rotate(20deg)
    &:hover
      .trust__pic
        transform: rotate(20deg)
        img
          transform: rotate(-20deg)
  .t--6
    transition: .5s 1.25s ease-in-out all
    opacity 0
    transform: translateX(300%)
    .trust__pic
      transform: rotate(-40deg)
      img
        transform: rotate(40deg)
    &:hover
      .trust__pic
        transform: rotate(40deg)
        img
          transform: rotate(-40deg)
  .t--7
    transition: .5s 1.5s ease-in-out all
    opacity 0
    transform: translateX(300%)
    .trust__pic
      transform: rotate(-60deg)
      img
        transform: rotate(60deg)
    &:hover
      .trust__pic
        transform: rotate(60deg)
        img
          transform: rotate(-60deg)
  .t--8
    transition: .5s 1.75s ease-in-out all
    opacity 0
    transform: translateX(300%)
    .trust__pic
      transform: rotate(-80deg)
      img
        transform: rotate(80deg)
    &:hover
      .trust__pic
        transform: rotate(80deg)
        img
          transform: rotate(-80deg)

  &__pic
    width 204px
    height 193px
    background url(../img/content/trust-bg.png) center no-repeat
    background-size cover
    display flex
    justify-content center
    align-items center
    transition: $middle
    img
      max-width 80px
      transition: $middle
  p
    text-align center
    color #262626
    font-family $hLight
    font-size 1.8rem
    font-weight 300
    line-height 2.4rem

.coop
  display flex
  justify-content center
  align-items flex-end
  margin-top 150px
  margin-bottom -150px
  +media(1200px)
    flex-direction: column
  &:hover,
  &.animated
    .coop__truck
      right 15px
      top 50px
      transform: scale(1) !important
      +media(1200px)
        right: initial
        left 20%
    .coop__truck-shadow
      opacity 1
      transform: scale(1) !important
      transition: 1s 1.75s ease-in all
  h2
    color #26272d
    font-family $hLight
    font-size 6rem
    font-weight 300
    line-height 5.3rem
    letter-spacing 2.4px

  &__subtitle
    color #727374
    font-family $mainFont
    font-size 1.6rem
    font-weight 400
    line-height 2.4rem
    max-width 680px
    +media(1200px)
      max-width 600px
      width 100%
      margin 0 auto

  &__pic
    width 540px
    height 480px

  &__img
    position absolute

  &__man
    width: 325px
    height: 479px
    right: -140px
    top: -126px
    +media(1200px)
      right: initial
      left 50%

  &__truck
    width 364px
    height 274px
    right -95px
    top 50px
    transform: scale(0.3)
    transform-origin: bottom center
    transition: 1s .75s ease-in all

  &__truck-shadow
    width 374px
    height 193px
    right: 130px
    top: 40px
    opacity 0
    transform: scale(.5)
    transition: 1s 1.2s ease all
    +media(1200px)
      right initial
      left 0

.semi
  width 50%
  height 353px
  background-color #fefae1
  flex-grow: 1
  padding-left 200px
  +media(1200px)
    width 100%
    padding-left 0
  &__left
    background-color #ffd200
    width 35%
    flex-grow: 0
    flex-shrink: 0
    position relative
    +media(1200px)
      width 100%

  &--text *
    transition: 1s 1.5s ease-in all
    opacity 0
    transform: translateX(-300%)
    +media(1200px)
      display flex
      flex-direction: column
      align-items center
      justify-content center
      text-align center
      .btn
        margin 0
        padding 0
    .animated &
      opacity 1
      transform: translate(0) !important

  &--text
    .button__row
      flex-direction: row
      width 600px
      justify-content space-between
      margin 20px auto