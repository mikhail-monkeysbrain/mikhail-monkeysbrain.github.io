@import '../core/variables.styl';

.footer
  width 100%

  &__container
    width 1131px
    margin 0 auto

  &__top
    display flex
    justify-content space-between
    align-items flex-start

  &__logo
    width 202px

  &__mail-phone
    width 250px
    display flex
    flex-direction: column

  &__social
    display flex
    align-items center
    justify-content space-between
    margin 25px 0
    &--line
      width 100%
      height 1px
      background #9a9a9a
      flex-shrink: 1
      flex-grow: 1
    &__wrapper
      display flex
      justify-content space-between
      align-items center
      width 155px
      margin-left 50px

  &__bottom
    display flex
    justify-content space-between
    align-items center
    a,
    p
      color #9a9a9a
      font-family $mainFont
      font-size 1.4rem
      font-weight 400
      line-height .4rem