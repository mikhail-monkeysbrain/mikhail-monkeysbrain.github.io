@import '../core/variables.styl';

.footer
  width 100%

  &__container
    width 1131px
    margin 0 auto
    +media(1200px)
      width 100%

  &__top
    display flex
    justify-content space-between
    align-items flex-start
    +media(1200px)
      padding 0 40px
    +media(768px)
      padding 0 20px
      flex-wrap: wrap

  &__logo
    width 202px
    +media(1200px)
      display none

  &__mail-phone
    width 250px
    display flex
    flex-direction: column
    +media(480px)
      text-align center
      margin-bottom 20px

  &__social
    display flex
    align-items center
    justify-content space-between
    margin 25px 0
    +media(1200px)
      padding 0 40px
    &--line
      width 100%
      height 1px
      background #9a9a9a
      flex-shrink: 1
      flex-grow: 1
      +media(480px)
        display none
    &__wrapper
      display flex
      justify-content space-between
      align-items center
      width 155px
      margin-left 50px
      +media(480px)
        margin-left 0
        margin 0 auto
        width calc(100% - 20px)

  &__bottom
    display flex
    justify-content space-between
    align-items center
    +media(1200px)
      padding 0 40px
    +media(768px)
      padding 0 20px
      flex-direction: column-reverse
    +media(480px)
      text-align center
    a,
    p
      color #9a9a9a
      font-family $mainFont
      font-size 1.4rem
      font-weight 400
      line-height 1

.footer__address
  +media(1200px)
    max-width 35%
  +media(768px)
    max-width 100%
    margin-bottom 20px
    text-align center
    width 100%
    display block

.footer__phone-wrapper
  +media(480px)
    text-align center
    width 250px