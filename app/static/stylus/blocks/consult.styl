.trust
  &__num
    position: absolute
    right: 190px
    top: 10px
    background: #ffc706
    width: 40px
    height: 40px
    display: flex
    justify-content: center
    align-items: center
    border-radius: 50%
    color: #fff
    font-size: 2rem
  &__pic
    width 171px
    height 161px
    align-self: center
  &__item--shema
    position absolute
    width 540px
    max-width initial
    justify-content flex-start
    align-items flex-start
    b
      color #262626
      font-size 16px
      font-weight bold
      font-family $hBold
      line-height 24px
      text-transform uppercase
      padding 20px 0
    p
      padding-left: 31px
      position relative
      margin 5px 0
      &::after
        width 16px
        height 16px
        content: ''
        display block
        background url(../img/icons/dot.png) center no-repeat
        background-size cover
        position absolute
        left 0
        top 5px
      &:nth-child(2n)
        &::after
          filter: grayscale(1)
    &.s--1
      left 18rem
      top 2rem
    &.s--2
      right 5rem
      top 2rem
    &.s--3
      right 5rem
      top 44rem
    &.s--4
      left 18rem
      top 52rem
    &.s--5
      left 18rem
      top 109rem
      width 845px
      .trust__pic
        align-self: flex-start
      .trust__num
        right initial
        left 110px

